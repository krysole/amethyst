{
    "name": "amethyst-language",
    "displayName": "Amethyst Language",
    "description": "Syntax Highlighting for Amethyst Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "amethyst",
            "aliases": ["Amethyst", "amethyst"],
            "extensions": [".am"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "amethyst",
            "scopeName": "source.amethyst",
            "path": "./syntaxes/amethyst.tmLanguage.json"
        }]
    }
}
